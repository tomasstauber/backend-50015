<div class="container">
    <div class="row">
        {{#each products}}
            <div class="col-md-4">
                <div class="card border-0 mb-3">
                    <img src="{{this.thumbnail}}" class="img-fluid" alt="{{this.title}}">
                    <div class="card-body text-center">
                        <p class="card-text">{{this.title}}<br><span class="">${{this.price}}</span></p>
                        <button type="button" class="btn btn-sm btn-outline-dark">Comprar</button>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>