<div class="container">
    <div class="row">
        <div class="col-md-4 offset-md-2">
            <img src="{{product.thumbnail}}" alt="{{product.title}}" class="img-fluid">
        </div>
        <div class="col-md-4">
            <h1 class="fs-1 fw-light">{{product.title}}</h1>
            <p class="fs-2 fw-light">${{product.price}}</p>
            <p><button class="btn btn-sm btn-outline-dark" onclick="agregarProductoAlCarrito('{{product._id}}')">Agregar</button></p>
            <p class="fw-light">{{product.description}}</p>
        </div>
    </div>
</div>